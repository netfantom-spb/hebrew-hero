{
	"manifest_version": 3,
	"name": "Hebrew-Hero",
	"homepage_url": "https://github.com/netfantom-spb/hebrew-hero",	
	"minimum_chrome_version": "100",
	"icons": {
		"128": "assets/icon.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [ "http://localhost/*", "http://127.0.0.1/*" ],
			"js": [ "./sites/localhost/localhost.ts" ],
			"css": [ "./sites/localhost/localhost.css" ],
			"run_at": "document_end"
		},
		{
			"matches": ["https://*.leumi.co.il/*"],
			"js": [ "./sites/leumi.co.il/leumi.co.il.ts"],
			"css": [ "./sites/leumi.co.il/leumi.co.il.css"],
			"run_at": "document_end" 
		}
	]
}
